NAME = philo
CC = cc
CFLAGS = -Wall -Wextra -Werror
SRCS = errors_and_exits.c\
		initialization.c\
		main.c\
		philosophers.c\
		utils.c
OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

